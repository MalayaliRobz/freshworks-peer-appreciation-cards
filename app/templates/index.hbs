<div class="select-card--page">
  <div class="intro-wrapper">
    <div class="intro-heading">Give one of your peers an appreciation for their good work.</div>
    <div class="intro-sub">Choose one of these qualities to appreciate and make their day ðŸ¤—.</div>
  </div>

  <div class="card-list">
      {{#each this.cultureQualities as |quality|}}
      <AnimatedContainer class="card-list-item" 
          {{on "click" (fn this.onCardClick quality) }}>
        {{#animated-value quality use=this.transition}}
            <AppreciationsCard 
                @letter={{quality.letter}}
                @size="s">
              <div class="card-content">
                <div class="card-content--letter">
                  {{quality.letter}}
                </div>

                <div class="card-content--title">
                  {{quality.name}}
                </div>
              </div>
            </AppreciationsCard>
        {{/animated-value}}
        </AnimatedContainer>
      {{/each}}
  </div>
</div>