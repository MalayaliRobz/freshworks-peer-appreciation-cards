<div class="select-card--page">
  <div class="intro-wrapper">
    <h2 class="intro-heading">Give one of your peers an appreciation for their good work.</h2>
    <h4 class="intro-sub">Choose one of these qualities to appreciate and make their day ðŸ¤—.</h4>
  </div>

  <div class="card-list">
      {{#each this.cultureQualities as |quality|}}
      <AnimatedContainer class="card-list-item" tabindex="0"
          {{on "click" (fn this.onCardClick quality) }}
          {{on "keypress" (fn this.onCardClickEnter quality) }}>
        {{#animated-value quality use=this.transition}}
            <AppreciationsCard 
                @letter={{quality.letter}}
                @size="s">
              <div class="card-content">
                <div class="card-content--letter">
                  {{quality.letter}}
                </div>

                <div class="card-content--title">
                  {{quality.name}}
                </div>
              </div>
            </AppreciationsCard>
        {{/animated-value}}
        </AnimatedContainer>
      {{/each}}
  </div>
</div>

{{#each this.cultureQualities as |quality|}}
  <link rel="prefetch" href={{quality.imageLoc}}>
{{/each}}
